// This function return true or false depending on input i is an exponetial power of 2

static boolean isExponetialPowerOfTwo(int i) {
       if (i < 1) return false;
       if (i == 1) return true;
       do {
              // Modulus and Division are slow operations for the hardware
              // This can be done using bit masking and shifting which is hardware fast

//           if ((i % 2) == 1) return false;
//           i = i/2;
              if ((i & 1) == 1) return false;
              i = (i >> 1);
       } while(i > 2 );
       return true;
}
